.phpdocumentor-title {
    box-sizing: border-box;
    color: var(--pico-h1-color);
    font-size: var(--text-xxl);
    letter-spacing: .05rem;
    font-weight: normal;
    width: auto;
    margin: 0;
    display: flex;
    align-items: center;
}

body > header > nav > ul > li > a[role='brand logo'] {
    margin-bottom: var(--pico-typography-spacing-vertical);
    vertical-align: bottom;
}
body > header > nav > ul > li > a[role='brand logo'],
body > header > nav > ul > li > hgroup {
    display: inline-block;
}

.phpdocumentor-title .brand-icon {
    width:2rem;
    display:inline-block;
}
.phpdocumentor-title.-without-divider {
    border: none;
}

.phpdocumentor-title__link {
    transition: all .3s ease-out;
    display: flex;
    color: var(--pico-h1-color);
    text-decoration: none;
    font-weight: normal;
    white-space: nowrap;
    transform: scale(.75);
    transform-origin: left;
}

.phpdocumentor-title__link:hover {
    transform: perspective(15rem) translateX(.5rem);
}

@media (min-width: {{ breakpoints['menu'] }}) {
    .phpdocumentor-title {
        width: 22%;
    }

    .phpdocumentor-title__link {
        transform-origin: left;
    }
}

@media (min-width: {{ breakpoints['xl'] }}) {
    .phpdocumentor-title__link {
        transform: scale(.85);
    }
}

@media (min-width: {{ breakpoints['xxl'] }}) {
    .phpdocumentor-title__link {
        transform: scale(1);
    }
}
